#include <stdio.h>
int main(){
    float nota1, nota2, nota3, soma, media;
    int resp;
    
    do{
        printf("digite a primeira nota: ");
        scanf("%f", &nota1);
        
        printf("Digite a segunda nota: ");
        scanf("%f", &nota2);
        
        printf("Digite a terceira nota: ");
        scanf("%f", &nota3);
        
        soma = nota1+nota2+nota3;
        media = (nota1+nota2+nota3)/3;
        
        printf("A soma das notas e: %2.f", soma);
        printf("A soma do aluno e: %2.f", media);
        
        printf("\nDigite 1 para continuar ou 2 para sair\n");
        scanf("%d", &resp);
        
    }while(resp==1);
    
    return 0;
}
